<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/representative"
    android:orientation="vertical"
    tools:context=".Account.Login">

    <TextView
        android:id="@+id/user_login_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:text="로그인" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/login_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="이메일"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textSize="17dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
        <EditText
            android:id="@+id/login_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:inputType="textPassword"
            android:hint="비밀번호 입력"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textSize="17dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/change_pw"
            android:layout_width="match_parent"
            android:gravity="right"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊으셨습니까?" />


            <Button
                android:layout_marginTop="50dp"
                android:id="@+id/login_check"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/detail_button"
                android:text="로그인"
                android:textColor="@color/white" />

            <TextView
                android:background="@drawable/textlines"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="신규계정 만들기" />



    </LinearLayout>

</LinearLayout>