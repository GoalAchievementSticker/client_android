<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Toolbar"
        android:textColor="#3F4739"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/home_study_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="#공부"
        android:textSize="20sp"
        android:background="@drawable/frgment_home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.198"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_search"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/home_routin_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="#루틴"
        android:background="@drawable/frgment_home_button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toEndOf="@+id/home_study_button"
        app:layout_constraintTop_toBottomOf="@+id/home_search"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/home_hobby_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="340dp"
        android:background="@drawable/frgment_home_button"
        android:text="#취미"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toEndOf="@+id/home_exercise_button"
        app:layout_constraintTop_toBottomOf="@+id/home_routin_button"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/home_exercise_button"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:background="@drawable/frgment_home_button"
        android:text="#운동"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.199"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_study_button"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>